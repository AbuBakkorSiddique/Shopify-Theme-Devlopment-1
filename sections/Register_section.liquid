  <input type="password" name="customer[password]" placeholder="Password" class="input w-full outline-none border border-black p-2  text-black rounded-md " />
  <input type="date" name="customer[metafields][custom][dob]"  class="input w-full outline-none border border-black p-2  text-black rounded-md " />
  <input type="text" name="customer[metafields][custom][address]" placeholder="Address..." class="input w-full outline-none border border-black p-2  text-black rounded-md " />

  
  <button type="submit" class="input w-full outline-none border border-black p-2  text-white bg-black rounded-md " > SignUp </button>
   


